<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:background="@color/white"
              android:weightSum="1"
              android:id="@+id/RootViewMain">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal"
                  android:layout_weight="0.71">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="left"
                      android:orientation="vertical">
            <ImageView
                android:id="@+id/swipe_picture"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:gravity="left"
                android:src="@drawable/swipe_right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/swipe"
                android:fontFamily="sans-serif-light"
                />
        </LinearLayout>



    <ImageView
        android:id="@+id/fitness_picture"
        android:layout_width="168dp"
        android:layout_height="207dp"
        android:src="@drawable/fitness_main"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.56"/>
        </LinearLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="vertical">
    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="119dp"
        android:layout_height="66dp"
        android:src="@drawable/nfc_logo"

        android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nfc_instructions"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="24dp"/>

        </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/login_button_main"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/login_button"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"/>
        <ImageButton
            android:id="@+id/logout_button_main"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logout_button"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"/>


    </LinearLayout>
    <ImageButton
        android:id="@+id/register_button_main"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/register_button"
        android:layout_gravity="right|bottom"
        android:background="@color/white"
        />

</LinearLayout>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>
</android.support.v4.widget.DrawerLayout>